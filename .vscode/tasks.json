{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Proto",
      "type": "shell",
      "command": "${workspaceFolder}/components/mist_messages/scripts/proto_compile.sh",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "This task runs the proto_compile.sh script to compile .proto files."
    },

    {
      "label": "credentials flash",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source $HOME/esp/esp-idf/export.sh && python3 ${workspaceFolder}/scripts/flash_credentials.py"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ]
}
